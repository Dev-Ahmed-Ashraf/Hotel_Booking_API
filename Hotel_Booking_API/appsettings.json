{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=HotelBookingDb;Trusted_Connection=true;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "SecretKey": "",
    "Issuer": "HotelBookingAPI",
    "Audience": "HotelBookingAPIUsers",
    "ExpirationMinutes": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Cors": {
    "AllowedOrigins": [
      "https://your-production-frontend.example.com"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
  ,
  "Stripe": {
    "ApiKey": "",
    "WebhookSecret": "",
    "PublishableKey": "",
    "Currency": "usd"
  },
  "SmtpSettings": {
    "Host": "smtp.mailtrap.io",
    "Port": 587,
    "Username": "",
    "Password": "",
    "SenderEmail": "noreply@hotelbooking.com",
    "SenderName": "Hotel Booking API",
    "EnableSsl": true
  },
  "MemoryCache": {
    "SizeLimitMB": 256,
    "DefaultTtlSeconds": 300,
    "AdminDashboardStatsSeconds": 60,
    "EmailTemplateSeconds": 600,
    "HotelsListSeconds": 300,
    "HotelDetailsSeconds": 600,
    "RoomsListSeconds": 300,
    "RoomDetailsSeconds": 600,
    "BookingsListSeconds": 60,
    "BookingDetailsSeconds": 120
  }
}
